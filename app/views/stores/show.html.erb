

<% @store.each do |x| %>
  <% if x['id'].to_s == params[:id] %>
  <h1><%= x['name']%></h1>
  
<p><%= x['address_line_1'] %><br><%= x['address_line_2'] %><br><%= x['city']%>, <%= x['postal_code']%><br><%= x['telephone']%></p>

  <p>Hours:</p>
  <p>Sunday: <%= x['sunday_open'].to_i / 60%> am - <%= x['sunday_close'].to_i / 60 - 12%> pm<br>
  Monday: <%= x['monday_open'].to_i / 60%> pm - <%= x['monday_close'].to_i / 60 - 12%> pm<br>
  Tuesday: <%= x['tuesday_open'].to_i / 60%> am - <%= x['tuesday_close'].to_i / 60 - 12%> pm<br>
  Wednesday: <%= x['wednesday_open'].to_i / 60%> am - <%= x['wednesday_close'].to_i / 60 - 12%> pm<br>
  Thursday: <%= x['thursday_open'].to_i / 60%> am - <%= x['thursday_close'].to_i / 60 - 12%> pm<br>
  Friday: <%= x['friday_open'].to_i / 60%> am - <%= x['friday_close'].to_i / 60 - 12%> pm<br>
  Saturday: <%= x['saturday_open'].to_i / 60%> am - <%= x['saturday_close'].to_i / 60 - 12%> pm</p>
    
  <% end %>

<% end %>